<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.finances.Starting.Splash"  parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_finanzas_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/green_background_dark</item>
        <item name="postSplashScreenTheme">@style/Theme.finances</item>
    </style>

    <style name="Theme.finances" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_background_dark_variant</item>
        <item name="colorPrimaryVariant">@color/green_background_dark</item>
        <item name="colorOnPrimaryContainer">@color/green_background_dark</item>
        <item name="colorPrimaryContainer">@color/green_background_dark_variant</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="toolbarStyle">@style/MaterialToolBar</item>
        <item name="textInputStyle">@style/MaterialTextInputLayout</item>
        <item name="android:textViewStyle">@style/MaterialTextView</item>
        <item name="colorControlNormal">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/green_background_dark_variant</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>
        <item name="progressBarStyle">@style/ProgressBar</item>
    </style>
</resources>