<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_min"
    android:orientation="vertical"
    tools:context=".finanzas.controller.RecapFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_min"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:background="@color/green_light_trans"
                android:layout_margin="@dimen/space_min"
                android:padding="@dimen/space_min"
                app:prefixText="@string/input_total"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_total_inputs_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/money_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/space_min"
                    android:layout_height="wrap_content"
                    android:text="@string/projections"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_min"
                android:padding="@dimen/space_min"
                android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:layout_weight="1"
                android:background="@color/green_light_trans"
                app:prefixText="@string/money_saved"
                android:layout_margin="@dimen/space_min">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_saved_rec"
                    android:hint="@string/money_hint"
                    android:textAlignment="textEnd"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:layout_weight="1"
                android:layout_margin="@dimen/space_min"
                app:prefixText="@string/quote_value"
                android:background="@color/green_light_trans">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_quote_save_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/money_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_min"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_min"
                        android:text="@string/cash_paids_credits"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_light_trans"
                    android:layout_margin="@dimen/space_min"
                    android:padding="@dimen/space_min"
                    android:layout_weight="1"
                    app:prefixText="@string/total_paid">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:id="@+id/tv_total_paid_rec"
                        android:hint="@string/money_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_light_trans"
                    android:padding="@dimen/space_min"
                    android:layout_margin="@dimen/space_min"
                    android:layout_weight="1"
                    app:prefixText="@string/total_credits">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_total_credits_rec"
                        android:hint="@string/money_hint"
                        android:textAlignment="textEnd"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_light_trans"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:padding="@dimen/space_min"
                app:prefixText="@string/total_paids_credits">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_paids_credits_rec"
                    android:textAlignment="textEnd"
                    android:hint="@string/money_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_light_trans"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:padding="@dimen/space_min"
                app:prefixText="@string/total_inputs_fix">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_inputs_fix"
                    android:textAlignment="textEnd"
                    android:hint="@string/money_hint"/>
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_min"
                    android:text="@string/credit_card"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_light_trans"
                android:layout_margin="@dimen/space_min"
                android:padding="@dimen/space_min"
                app:prefixText="@string/total_quote_credit_card">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_quote_credit_card_rec"
                    android:textAlignment="textEnd"
                    android:hint="@string/money_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_light_trans"
                android:layout_margin="@dimen/space_min"
                android:padding="@dimen/space_min"
                app:prefixText="@string/total_paids">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_paids_rec"
                    android:textAlignment="textEnd"
                    android:hint="@string/money_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_light_trans"
                android:layout_margin="@dimen/space_min"
                android:padding="@dimen/space_min"
                app:prefixText="@string/total_input_paids">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_input_paids_rec"
                    android:textAlignment="textEnd"
                    android:hint="@string/money_hint"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>