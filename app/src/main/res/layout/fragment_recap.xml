<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_min"
    tools:context=".finanzas.controller.RecapFragment">

    <HorizontalScrollView
        android:id="@+id/scroll_rec"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space_min">

            <ProgressBar
                android:id="@+id/pb_load_rec"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/card_elevator_5"
                android:progressBackgroundTint="@color/green_background"
                android:rotationX="-2" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_recap_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_min"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        android:orientation="vertical"
                        android:padding="@dimen/space_min">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/recap" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_min">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:hint="@string/input_total"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_total_inputs_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd"

                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_min"
                                    android:layout_weight="1"
                                    android:hint="@string/total_paids"
                                    app:prefixText="$">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/tv_total_paids_rec"
                                        style="@style/MaterialTextInputLayoutView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:enabled="false"
                                        android:hint="@string/money_hint"
                                        android:textAlignment="textEnd"
                                        android:textStyle="italic" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_min"
                                    android:layout_weight="1"
                                    android:hint="@string/total_input_paids"
                                    app:prefixText="$">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/tv_total_input_paids_rec"
                                        style="@style/MaterialTextInputLayoutView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:enabled="false"
                                        android:hint="@string/money_hint"
                                        android:textAlignment="textEnd" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_projections_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_min"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/cardview_light_background"
                        android:padding="@dimen/space_min">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_min"
                            android:enabled="false"
                            android:text="@string/projections" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_min"
                            android:orientation="horizontal"
                            android:padding="@dimen/space_min">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/money_saved"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_saved_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/quote_value"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_quote_save_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_paids_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_min">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/cardview_light_background"
                        android:padding="@dimen/space_min">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_min"
                            android:enabled="false"
                            android:text="@string/cash_paids_credits" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/total_paid"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_total_paid_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/total_credits"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_total_credits_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/total_paids_credits"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_total_paids_credits_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd"
                                    tools:ignore="DuplicateClickableBoundsCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/total_inputs_fix"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_total_inputs_fix"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd"
                                    tools:ignore="DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_credit_card_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/space_min"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        android:orientation="vertical"
                        android:padding="@dimen/space_min">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_min"
                            android:enabled="false"
                            android:text="@string/credit_card" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/MaterialTextInputLayoutView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_min"
                            android:hint="@string/total_quote_credit_card"
                            app:prefixText="$">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tv_total_quote_credit_card_rec"
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="@string/money_hint"
                                android:textAlignment="textEnd" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/warning_quote_value"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_warning_credit_card_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/MaterialTextInputLayoutView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_min"
                                android:layout_weight="1"
                                android:hint="@string/value_spend"
                                app:prefixText="$">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_limit_credit_card_rec"
                                    style="@style/MaterialTextInputLayoutView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/money_hint"
                                    android:textAlignment="textEnd" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>