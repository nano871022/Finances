<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_min"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_min"
        android:background="?attr/colorPrimaryVariant"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/period"
            style="@style/MaterialTextInputLayoutView"
            android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_period_pcpi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/date_hint"
            android:enabled="false"
            style="@style/MaterialTextInputLayoutView"
            android:textAlignment="textStart"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:hint="@string/num_paids">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_count_pcpi"
            android:text="@string/integer_hint"
            android:enabled="false"
            style="@style/MaterialTextInputLayoutView"
            android:textAlignment="center"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            app:prefixText="$"
            android:hint="@string/total_paid">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_paid_pcpi"
            android:text="@string/money_hint"
            android:enabled="false"
            style="@style/MaterialTextInputLayoutView"
            android:textAlignment="center"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageButton
            android:id="@+id/btn_search_pcpi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:backgroundTint="#00FFFFFF"
            tools:src="@drawable/search" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>