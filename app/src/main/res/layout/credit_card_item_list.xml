<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/space_min"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryVariant"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/llTitleBought"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNameLCCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/product_name"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_more_ilccs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="?attr/colorPrimaryVariant"
                app:srcCompat="@drawable/more_vertical" />

        </LinearLayout>

        <View
            android:id="@+id/bought_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/llQuotesBought"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbValueLCCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cut_off_day"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvValueLCCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@string/months_number_hint"
                android:textAlignment="textEnd"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/lbStatusICC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/status"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatusLCCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/months_number_hint"
                android:textAlignment="textEnd"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCapitalBought"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbCreditCardLCCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/warning_quote_value"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCreditCardLCCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/money_hint"
                android:textAlignment="textEnd"
                android:textColor="@android:color/primary_text_dark" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>