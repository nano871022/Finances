<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_min"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/date_input"
            style="@style/MaterialTextInputLayoutView"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:id="@+id/date_input_iil"
                android:text="@string/date_hint"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/name"
            style="@style/MaterialTextInputLayoutView"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:text="@string/name"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:id="@+id/name_iil"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/value"
            app:prefixText="$"
            style="@style/MaterialTextInputLayoutView"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:text="@string/money_hint"
                style="@style/MaterialTextInputLayoutView"
                android:enabled="false"
                android:id="@+id/value_iil"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/btn_delete_iil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>