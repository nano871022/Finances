<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="@dimen/stroke_with"
    app:cardCornerRadius="@dimen/radius_corner"
    app:cardElevation="@dimen/card_elevator"
    android:orientation="vertical"
    android:layout_margin="@dimen/space_min"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/green_light_trans"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            app:prefixText="@string/date_input"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/date_input_iil"
                android:hint="@string/date_hint"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/green_light_trans"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            app:prefixText="@string/name"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:hint="@string/name"
                android:id="@+id/name_iil"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/green_light_trans"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            app:prefixText="@string/value"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:hint="@string/money_hint"
                android:id="@+id/value_iil"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/btn_delete_iil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>