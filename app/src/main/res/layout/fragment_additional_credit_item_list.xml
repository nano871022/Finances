<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_min">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="@string/name"
            android:layout_margin="@dimen/space_min"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:text="@string/name"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:id="@+id/name_acil"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="@string/value"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            app:prefixText="$"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:text="@string/money_hint"
                android:textAlignment="center"
                style="@style/MaterialTextInputLayoutView"
                android:id="@+id/value_acil"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/btn_edit_acil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            app:srcCompat="@drawable/search" />

        <ImageView
            android:id="@+id/btn_delete_acil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            app:srcCompat="@drawable/ic_baseline_delete_24" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>