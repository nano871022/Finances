<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_min">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:hint="@string/date_bill">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/month_year_pcil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_hint"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:textAlignment="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/num_credits"
            style="@style/MaterialTextInputLayoutView"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/num_credits_pcil"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:textAlignment="textEnd"
                android:text="@string/num_credits_hint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            app:prefixText="$"
            android:hint="@string/value"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:id="@+id/value_pcil"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:text="@string/money_hint"/>
        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:id="@+id/btn_credits_pcil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>