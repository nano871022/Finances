<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".finanzas.controller.AmortizationTableFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_min"
        android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                app:prefixText="@string/credit_value">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/credit_value_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/money_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                android:layout_weight="1"
                app:prefixText="@string/tax">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tax_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/integer_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                android:layout_weight="1"
                app:prefixText="@string/periods">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/periods_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/months_number_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/quoteValueLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                app:prefixText="@string/quote_value">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quote_value_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/money_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/capitalValueLayout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            android:background="@color/green_light_trans"
            app:prefixText="@string/capital_value">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/capital_value_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/money_hint"
                android:textAlignment="textEnd"/>
        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                android:layout_weight="1"
                app:prefixText="@string/interest_to_pay_value">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/interest_to_pay_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/money_hint"
                    android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>


    <TableLayout
        android:id="@+id/tableAT"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/space_min"
        android:padding="@dimen/space_min"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="@dimen/column_space_min"
                android:layout_height="wrap_content"
                android:background="@color/green_background"
                android:padding="@dimen/space_min"
                android:text="#" />

            <com.google.android.material.textview.MaterialTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:text="@string/value"
                android:background="@color/green_background"
                android:layout_margin="@dimen/column_space_min"
                android:layout_weight="2.5"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/capital_column_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/column_space_min"
                android:background="@color/green_background"
                android:textColor="@color/white"
                android:layout_weight="3"
                android:textAlignment="center"
                android:text="@string/capital_value" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:background="@color/green_background"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="@dimen/column_space_min"
                android:layout_weight="3"
                android:textAlignment="center"
                android:padding="@dimen/space_min"
                android:text="@string/interest_value" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/totalColumn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/green_background"
                            android:layout_margin="@dimen/column_space_min"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:padding="@dimen/space_min"
                            android:layout_weight="2"
                            android:text="total"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/NextValueColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_background"
                android:layout_margin="@dimen/column_space_min"
                android:padding="@dimen/space_min"
                android:layout_weight="2"
                android:text="next value"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:visibility="visible" />
        </TableRow>
    </TableLayout>

    </LinearLayout>
    </ScrollView>
</FrameLayout>