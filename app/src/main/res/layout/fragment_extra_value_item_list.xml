<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_page"
    android:padding="@dimen/padding_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="?attr/colorPrimaryVariant"
        android:padding="@dimen/padding_page"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_dark"
            android:text="@string/period"/>
        <TextView
            android:id="@+id/tv_period_evil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_dark"
            android:text="@string/integer_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_dark"
            android:text="@string/value"/>
        <TextView
            android:id="@+id/tv_value_evil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textColor="@android:color/primary_text_dark"
            android:layout_weight="1"
            android:text="@string/money_hint"/>

        <ImageView
            android:id="@+id/iv_more_evil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/more_vertical" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>