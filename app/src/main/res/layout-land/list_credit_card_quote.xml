<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pb_load_qcc"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/card_elevator_5"
            android:progressBackgroundTint="@color/green_background"
            android:rotationX="-2" />

    <LinearLayout
        android:id="@+id/llRemainderCutOffDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llCutOffDateQuote">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:endIconMode="clear_text"
            android:hint="@string/credit_card">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spCreditCardQCC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:hint="@string/cut_off_date" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvCutOffDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_hint"
            style="@style/MaterialTextInputLayoutView"
            android:enabled="false"
            android:textAlignment="textEnd"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:hint="@string/remainderCutOffDate" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvRemainderCutOffDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            style="@style/MaterialTextInputLayoutView"
            android:text="@string/integer_hint"
            android:textAlignment="textEnd" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quote_value"
        style="@style/MaterialTextInputLayoutView"
        app:prefixText="$">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvTotalValueQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/money_hint"
            android:textAlignment="center"
            style="@style/MaterialTextInputLayoutView"
            android:enabled="false"
            android:textSize="24sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/MaterialTextInputLayoutView"
            app:prefixText="$"
            android:layout_weight="1"
            android:hint="@string/capital_value" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvEquityValueQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quote_credit_hint"
            style="@style/MaterialTextInputLayoutView"
            android:enabled="false"
            android:textAlignment="textEnd"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            app:prefixText="$"
            android:hint="@string/interest_value" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvInterestValueQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialTextInputLayoutView"
            android:enabled="false"
            android:text="@string/interest_value_hint"
            android:textAlignment="textEnd"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:hint="@string/count_items_quotes" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvNumQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/integer_hint"
            android:enabled="false"
            style="@style/MaterialTextInputLayoutView"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/MaterialTextInputLayoutView"
            android:hint="@string/count_items_1_quote" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvNumOneQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/integer_hint"
            android:enabled="false"
            style="@style/MaterialTextInputLayoutView"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MaterialTextInputLayoutView"
                app:prefixText="$"
                android:hint="@string/warning_quote_value">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_limit_lccq"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:text="@string/money_hint"
                    android:enabled="false"
                    style="@style/MaterialTextInputLayoutView"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:prefixText="$"
                style="@style/MaterialTextInputLayoutView"
                android:hint="@string/value_spend">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_warning_lccq"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:enabled="false"
                    style="@style/MaterialTextInputLayoutView"
                    android:text="@string/money_hint"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_min">

    <LinearLayout
        android:id="@+id/llLastMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialTextInputLayoutView"
                android:hint="@string/last_month_bought" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvLastMonthBought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_hint"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:textAlignment="center"/>
            </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MaterialTextInputLayoutView"
                app:prefixText="$"
                android:hint="@string/capital_quote" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvCapitalQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialTextInputLayoutView"
                android:enabled="false"
                android:text="@string/money_hint"
                android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MaterialTextInputLayoutView"
                app:prefixText="$"
                android:hint="@string/capital_quotes" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvCapitalQuotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialTextInputLayoutView"
                android:enabled="false"
                android:text="@string/money_hint"
                android:textAlignment="textEnd" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MaterialTextInputLayoutView"
                app:prefixText="$"
                android:hint="@string/last_month_interes" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvInteresLastMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialTextInputLayoutView"
                android:text="@string/money_hint"
                android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MaterialTextInputLayoutView"
                app:prefixText="$"
                android:hint="@string/total_value" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvTotalQuoteLastMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/money_hint"
                android:enabled="false"
                style="@style/MaterialTextInputLayoutView"
                android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <co.japl.android.graphs.drawer.CustomDraw
            android:id="@+id/cv_canvas_lccq"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBought"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:text="@string/bought"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBoughtHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:text="@string/bought_history"
                app:icon="@android:drawable/ic_menu_view" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCutOffHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cut_off_history"
                app:icon="@android:drawable/ic_menu_agenda"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:text="@string/add_buy"
                app:icon="@android:drawable/ic_menu_add"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCashAdvance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_menu_add"
                android:text="@string/add_cash_advance" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBuyWalletLCCQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_menu_add"
                android:text="@string/add_buy_wallet" />



        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>