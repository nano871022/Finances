<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





    <LinearLayout
        android:id="@+id/llRemainderCutOffDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llCutOffDateQuote">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:endIconMode="clear_text"
            android:hint="@string/credit_card">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spCreditCardQCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_page"
            android:layout_margin="@dimen/padding_page"
            android:background="@color/green_light_trans"
            app:prefixText="@string/cut_off_date" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCutOffDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_hint"
            android:textAlignment="textEnd"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_page"
            android:layout_margin="@dimen/padding_page"
            android:background="@color/green_light_trans"
            app:prefixText="@string/remainderCutOffDate" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRemainderCutOffDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/integer_hint"
            android:textAlignment="textEnd" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_page"
        android:layout_margin="@dimen/padding_page"
        app:prefixText="@string/quote_value"
        android:background="@color/green_light_trans">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTotalValueQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/money_hint"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_min"
            android:layout_margin="@dimen/space_min"
            android:background="@color/green_light_trans"
            android:layout_weight="1"
            app:prefixText="@string/capital_value" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEquityValueQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quote_credit_hint"
            android:textAlignment="textEnd"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_min"
            android:layout_weight="1"
            android:layout_margin="@dimen/space_min"
            android:background="@color/green_light_trans"
            app:prefixText="@string/interest_value" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInterestValueQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/interest_value_hint"
            android:textAlignment="textEnd"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_min"
            android:layout_weight="1"
            android:layout_margin="@dimen/space_min"
            android:background="@color/green_light_trans"
            app:prefixText="@string/count_items_quotes" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNumQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/integer_hint"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_min"
            android:layout_weight="1"
            android:layout_margin="@dimen/space_min"
            android:background="@color/green_light_trans"
            app:prefixText="@string/count_items_1_quote" >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNumOneQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/integer_hint"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLastMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                app:prefixText="@string/last_month_bought" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLastMonthBought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_hint"
                android:textAlignment="center"/>
            </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                android:layout_weight="1"
                app:prefixText="@string/capital_quote" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCapitalQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/money_hint"
                android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                android:layout_weight="1"
                app:prefixText="@string/capital_quotes" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCapitalQuotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/money_hint"
                android:textAlignment="textEnd" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                app:prefixText="@string/last_month_interes" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvInteresLastMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/money_hint"
                android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_min"
                android:layout_margin="@dimen/space_min"
                android:background="@color/green_light_trans"
                android:layout_weight="1"
                app:prefixText="@string/total_value" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotalQuoteLastMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/money_hint"
                android:textAlignment="textEnd"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBought"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:text="@string/bought"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBoughtHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:text="@string/bought_history"
                app:icon="@android:drawable/ic_menu_view" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCutOffHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cut_off_history"
                app:icon="@android:drawable/ic_menu_agenda"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                android:text="@string/add_buy"
                app:icon="@android:drawable/ic_menu_add"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCashAdvance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_menu_add"
                android:text="@string/add_cash_advance" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBuyWalletLCCQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_min"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_menu_add"
                android:text="@string/add_buy_wallet" />



        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>