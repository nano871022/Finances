<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_min">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="?attr/colorPrimaryVariant"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTitleBought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNameLCCS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:text="@string/date_hint"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total_value"
                    android:textColor="@android:color/primary_text_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCreditCardLCCS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/money_hint"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/primary_text_dark" />

            </LinearLayout>

            <View
                android:id="@+id/bought_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/llQuotesBought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/interest_value_short"
                    android:textColor="@android:color/primary_text_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvValueLCCS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="@string/money_hint"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/primary_text_dark"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/capital_value_short"
                    android:textColor="@android:color/primary_text_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStatusLCCS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/money_hint"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/primary_text_dark"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_more_qpil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimaryVariant"
            app:srcCompat="@drawable/more_vertical" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>